{
  "name": "varify-assets",
  "version": "1.0.0",
  "description": "JavaScript assets for Varify - VCF analysis and reporting tool",
  "type": "module",
  "scripts": {
    "build": "node build-report.js",
    "build:quick": "esbuild src/varify/assets/js/index.js --bundle --outfile=dist/bundle.js --format=iife --global-name=Varify --minify --main-fields=module,main",
    "build:report": "node build-report.js",
    "build:package": "node build-report.js --package",
    "dev": "esbuild src/varify/assets/js/index.js --bundle --outfile=dist/bundle.js --format=iife --global-name=Varify --watch --main-fields=module,main",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.js\""
  },
  "keywords": [
    "vcf",
    "structural-variants",
    "bioinformatics",
    "genomics"
  ],
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.12",
    "esbuild-postcss": "^0.0.4",
    "fake-indexeddb": "^6.0.0",
    "happy-dom": "^20.0.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "ag-grid-community": "^31.0.0",
    "dexie": "^4.2.1",
    "echarts": "^5.5.0",
    "igv": "^3.0.5",
    "yaml": "^2.8.1"
  }
}
